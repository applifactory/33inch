background33
  display: block
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 0
  background: $darkBg
  &::before
    content: ''
    display: block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: url(/dot-bg.png) center
    background-size: 25px 25px
    z-index: 1
    opacity: 0.65
  &::after
    content: ''
    display: block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%);
    z-index: 2
  div
    position: absolute
  & > div
    background: lighten($darkBg, 5%)
    top: 0
    right: 0
    bottom: 0
    width: 40%
    & > div
      background: darken($darkBg, 8%)
      right: 0
      bottom: 0
      left: 0
      height: 30%
      & > div
        background: darken($darkBg, 20%)
        top: 0
        bottom: 0
        left: 0
        width: 35%
        & > div
          background: darken($darkBg, 12%)
          top: 0
          right: 0
          left: 0
          height: 43%
          & > div
            background: darken($darkBg, 30%)
            top: 0
            right: 0
            bottom: 0
            width: 33%
