header
  background: $darkBg linear-gradient(-180deg, lighten($darkBg, 10%) 0%, darken($darkBg, 10%) 100%);
  overflow: hidden
  .container
    margin: 0 auto
  h1.logo33inch
    margin: 20px auto
    cursor: pointer
  ul
    list-style: none
    margin: 24px 5px
    padding: 0
    li
      a
        color: $toolAccent
        text-decoration: none
        text-align: center
        padding: 10px
        display: block
        &:hover
          color: lighten($toolAccent, 40%)
      &.active
        a
          color: white
  +size($smallScreen)
    height: 90px
    h1.logo33inch
      margin: 18px 5px
      float: left
    ul
      float: right
      li
        display: inline-block
        a
          display: inline-block
