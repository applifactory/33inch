.color-picker
  //overflow: hidden
  .color
    border: solid 1px lighten(toolBg, 10%)
    width: 155px
    height: 155px
    float: left
    position: relative
    .sat, .light
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
    .sat
      background: linear-gradient(to right, #FFF, rgba(204, 154, 129, 0))
      z-index: 1
    .light
      background: linear-gradient(to top, #000, rgba(204, 154, 129, 0))
      z-index: 2
    .select
      width: 10px
      height: 10px
      margin: -6px 0 0 -6px
      position: absolute
      border-radius: 100%
      z-index: 3
      border: white 1px solid
      box-shadow: 0 0 0 1px black
    .overlay
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      &.active
        top: -20px
        right: -20px
        bottom: -20px
        left: -20px
      z-index: 4
      background: rgba(0,0,0,0)
  .hue
    border: solid 1px lighten(toolBg, 10%)
    height: 155px
    width: 20px
    float: right
    background: linear-gradient(to bottom, #F00 0%, #FF0 17%, #0F0 33%, #0FF 50%, #00F 67%, #F0F 83%, #F00 100%)
    position: relative
    .select
      width: 100%
      height: 6px
      margin: -4px 0 0 -1px
      position: absolute
      z-index: 3
      border: white 1px solid
      box-shadow: 0 0 0 1px black
    .overlay
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      &.active
        top: -20px
        right: -20px
        bottom: -20px
        left: -20px
      z-index: 4
      background: rgba(0,0,0,0)
  .alpha
    margin: 9px 0
    border: solid 1px lighten(toolBg, 10%)
    height: 10px
    width: 155px
    float: left
    background-color: #ddd
    background-image: linear-gradient(45deg, #FFF 25%,rgba(0, 0, 0, 0) 25%,rgba(0, 0, 0, 0) 75%,#FFF 75%,#FFF),linear-gradient(45deg, #FFF 25%,rgba(0, 0, 0, 0) 25%,rgba(0, 0, 0, 0) 75%,#FFF 75%,#FFF)
    background-size: 6px 6px
    background-position: 0 0, 9px 9px
    position: relative
    .light
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      background: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(90, 90, 90, 1))
      z-index: 1
    .select
      width: 6px
      height: 100%
      margin: -1px 0 0 -4px
      position: absolute
      z-index: 3
      border: white 1px solid
      box-shadow: 0 0 0 1px black
    .overlay
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      &.active
        top: -20px
        right: -20px
        bottom: -20px
        left: -20px
      z-index: 4
      background: rgba(0,0,0,0)
  .preview
    clear: both
    height: 30px
    width: 30px
    border: solid 1px lighten(toolBg, 10%)
    position: relative
    background-color: #ddd
    background-image: linear-gradient(45deg, #FFF 25%,rgba(0, 0, 0, 0) 25%,rgba(0, 0, 0, 0) 75%,#FFF 75%,#FFF),linear-gradient(45deg, #FFF 25%,rgba(0, 0, 0, 0) 25%,rgba(0, 0, 0, 0) 75%,#FFF 75%,#FFF)
    background-size: 6px 6px
    background-position: 0 0, 9px 9px
    .overlay
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
