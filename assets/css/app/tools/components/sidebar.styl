@import 'sidebar/components'

.sidebar
  position: fixed
  top: 0
  bottom: 0
  left: -290px
  background: $toolBg
  color: $toolText
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5)
  width: 300px
  z-index: 100000
  transform: translate3d(0,0,0)
  opacity: 0.5
  transition: all 0.3s ease
  overflow: auto
  overflow-x: hidden
  .fa-caret-right
    position: absolute
    right: 0
    top: 50%
    transform: translate(-50%, -50%)
  &:hover
    left: 0
    opacity: 1
    .fa-caret-right
      display: none
  ul
    list-style: none
    padding: 0
    margin: 0
