.websites-list
  @extend .app .container
  ul
    margin: 0
    padding: 0
    list-style: none
    li
      width: 302px
      margin: 1em auto
      a
        border: solid 1px $borderColor
        border-radius: 6px
        overflow: hidden
        color: $textInactiveColor
        text-decoration: none
        background: white
        display: block
        height: 250px
        box-sizing: border-box
        transition: border 0.2s ease
        &:hover
          border-color: $borderActiveColor
          box-shadow: 0 0 1px $borderActiveColor
        .tile
          height: 195px
          background: url(../website-placeholder.jpg)
          margin-bottom: 1px
          border-bottom: solid 1px $borderColor
        .name, .public, .address, .date
          float: left
          box-sizing: border-box
          padding: 0 8px
        .name, .public
          height: 30px
          line-height: 30px
        .name
          font-size: 18px
          width: 262px
        .public
          width: 38px
          text-align: center
          font-size: 21px
          .fa-eye
            display: none
        .address, .date
          font-size: 11px
        .address
          width: 220px
        .date
          width: 80px
          text-align: right
      &.active
        a
          color: $textActiveColor
          .name
            color: $textColor
          .public
            .fa-eye
              display: inline-block
            .fa-eye-slash
              display: none
      &.add-website
        a
          text-align: center
          .tile
            position: relative
            .fa
              position: absolute
              left: 50%
              top: 50%
              font-size: 30px
              color: $textActiveColor
              margin: -5px 0 0 -10px
              opacity: 0.5
              transition: opacity 0.2s ease
          .placeholder
            font-size: 18px
            text-align: center
            margin-top: 12px
          &:hover
            .tile
              .fa
                opacity: 1

  +size($smallScreen)
    ul
      overflow: hidden
      li
        float: left
        margin: 1em 16px
        &:nth-child(2n-1)
          margin-left: 57px
        &:nth-child(2n)
          margin-right: 57px

  +size($mediumScreen)
    ul
      li
        margin: 1em 16px
        &:nth-child(2n-1)
          margin-left: 16px
        &:nth-child(2n)
          margin-right: 16px
        &:nth-child(3n-2)
          margin-left: 0
        &:nth-child(3n)
          margin-right: 0
  +size($largeScreen)
    ul
      li
        &:nth-child(n)
          margin: 1em 0
        &:nth-child(4n-3), &:nth-child(4n-2), &:nth-child(4n-1)
          margin-right: 24px
