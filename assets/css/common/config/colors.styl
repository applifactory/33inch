//  ui-kit defaults
defaultColor = gray
primaryColor = #18BAE8
infoColor = #5BBEDA
successColor = #38be5d
warningColor = #E4BC21
dangerColor = #F4443A
borderColor = #E3E3E3

//  Colors
$toolBg = #333333
$toolText = #cccccc
$toolAccent = #38C05D
$toolSecondary = #18BAE8

//  Backgrounds
$darkBg = #1C2D4A
$lightGreenBg = #F7FBF8;
$navyBg = #022E5C

//  Texts
$textColor = #182740
$textActiveColor = $toolAccent
$textInactiveColor = #8A99B1

//  Borders
$borderColor = #C7C7C7
$borderActiveColor = $toolAccent

//  Tabs
$tabNavColor = $textInactiveColor
