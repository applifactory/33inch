.inch33
  article.features
    background: whitesmoke
    padding: 2em 0
    h1
      margin-top: 1em
    ul
      list-style: none
      padding: 0
      overflow: hidden
      li
        text-align: center
        padding: 2em 0
        position: relative
        .image
          padding: 5px
          img
            max-width: 100%
            box-sizing: border-box
        p
          margin-bottom: 0
        +size($small)
          column(1/3, cycle: 3)
          text-align: center
      &.col-2
        li
          +size($small)
            column(1/2, cycle: 2)
            text-align: center
      &.col-4
        li
          +size($small)
            column(1/4, cycle: 4)
            text-align: center
      &.col-5
        li
          +size($small)
            column(1/5, cycle: 5)
            text-align: center

