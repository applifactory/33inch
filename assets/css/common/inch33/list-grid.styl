.list-grid
  background: #C0A85A
  color: white
  ul
    list-style: none
    padding: 0
    &::after
      content: ''
      display: block
      clear: both
    li
      margin: 2.5em 0
      h3
        margin-bottom: 0.5em
      p
        margin-top: 0
    +size($small)
      &.col-2
        li
          column(1/2, cycle: 2, gutter: 5)
          margin-top: 0.5em
          margin-bottom: 0.5em
      &.col-3
        li
          column(1/3, cycle: 3, gutter: 5)
          margin-top: 0.5em
          margin-bottom: 0.5em
      &.col-4
        li
          column(1/4, cycle: 4, gutter: 3)
          margin-top: 0.5em
          margin-bottom: 0.5em
