.list-grid
  background: whitesmoke
  ul
    list-style: none
    padding: 0
    li
      margin: 2em 0
      h3
        margin-bottom: 0.5em
      p
        margin-top: 0
    +size($small)
      &.col-2
        li
          column(1/2, cycle: 2, gutter: 5)
      &.col-3
        li
          column(1/3, cycle: 3, gutter: 5)
      &.col-4
        li
          column(1/4, cycle: 4, gutter: 3)
