article.pricing-default
  padding: 1.5em 0
  .container
    +size($small)
      width: 680px
      max-width: 100%
    box-sizing: border-box
    .table
      .items, .prices
        border-radius: 10px
        p
          margin: 10px
          text-align: center
      .items
        background: #27a2d6
        color: #ffffff
        column(2/3)
      .prices
        background: #ffffff
        color: #27a2d6
        border: solid 1px #27a2d6
        column(1/3)
        box-sizing: border-box
        font-weight: bold
      &:after
        content: ''
        display: block
        clear: both
    p.small
      color: #cecece
      font-size: 0.75em
      margin: 0 10px
