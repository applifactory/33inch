.inch33
  .showcase-grid
    background: #1D262D
    color: white
    padding: 0
    ul
      list-style: none
      overflow: hidden
      padding: 0
      margin: 0
      li
        margin: 0
        background-position: center
        background-size: cover
        height: 0
        padding: 0
        overflow: hidden
        position: relative
        width: 50%
        padding-bottom: 50%
        float: left
        &:nth-child(1)
          background-image: url(http://lorempixel.com/350/250/city/1)
        &:nth-child(2)
          background-image: url(http://lorempixel.com/350/250/city/2)
        &:nth-child(3)
          background-image: url(http://lorempixel.com/350/250/city/3)
        &:nth-child(4)
          background-image: url(http://lorempixel.com/350/250/city/4)
        &:nth-child(5)
          background-image: url(http://lorempixel.com/350/250/nature/2)
        &:nth-child(6)
          background-image: url(http://lorempixel.com/350/250/city/6)
        &:nth-child(7)
          background-image: url(http://lorempixel.com/350/250/nature/1)
        &:nth-child(8)
          background-image: url(http://lorempixel.com/350/250/city/8)
        &:nth-child(9)
          background-image: url(http://lorempixel.com/350/250/nature/3)
        &:nth-child(10)
          background-image: url(http://lorempixel.com/350/250/city/7)
        &:nth-child(11)
          background-image: url(http://lorempixel.com/350/250/city/5)
        &:nth-child(12)
          background-image: url(http://lorempixel.com/350/250/city/9)
        h3
          position: absolute
          top: 50%
          transform: translate(0, -50%)
          padding: 0.5em
          text-align: center
          left: 0
          right: 0
          margin: 0
          color: white
          z-index: 2
          transition: all 0.3s ease
          text-shadow: 0 0 20px black, 0 0 50px black
      +size($small)
        li
          width: 33.333333333%
          padding-bottom: 33.333333333%
          h3
            opacity: 0
            text-shadow: none
          &::after
            content: ''
            position: absolute
            opacity: 0
            background: black
            top: 0
            right: 0
            bottom: 0
            left: 0
            transition: all 0.3s ease
          &:hover
            h3
              opacity: 1
            &::after
              opacity: 0.5
        &.col-4 li
          width: 25%
          padding-bottom: 25%
        &.col-5 li
          width: 20%
          padding-bottom: 20%
        &.col-6 li
          width: 16.666666667%
          padding-bottom: 16.666666667%
