.subscribe-form
  display: block
  color: #27A2D6
  padding: 3em 1em
  &::after
    content: ''
    display: block
    clear: both
  .container
    margin: 0 auto
    &::after
      content: ''
      display: block
      clear: both
    +size($medium)
      width: 550px
  form
    color: #27A2D6
    padding: 1em 0 3em
    +size($small)
      margin-bottom: 0
    label
      margin: 10px 0 0
      display: block
      p
        margin: 0
    .name, .email, .message
      margin-bottom: 25px
    input, select, textarea
      background-color: transparent
      border: 1px solid #27A2D6
      border-radius: 3px
      box-shadow: none
      color: #444
      line-height: 1.3
      box-sizing: border-box
      display: block
      width: 100%
      font-size: 1em
      padding: 0.5em 0.5em
      margin: 0.15em 0
      vertical-align: middle
      &:focus
        outline: none
        border-color: lighten(#27A2D6, 45%)
      &.error, .error &
        color: dangerColor
        border-color: dangerColor
    input, select
      height: 38px
      &[type=checkbox]
        display: inline-block
        width: 20px
        height: 22px
        margin: 0px 3px 3px 0
    button
      background: #27A2D6
      text-align: center
      width: 100px
      border: none
      border-radius: 3px
      font-size: 1.25em
      color: white
      float: right
      cursor: pointer
