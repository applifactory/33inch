input, select, textarea
  background-color: #FFF
  border: 1px solid borderColor
  border-radius: 0.3em
  box-shadow: none
  color: #444
  line-height: 1.3
  box-sizing: border-box
  display: block
  width: 100%
  font-size: 1em
  padding: 0.5em 0.75em
  margin: 0.15em 0
  vertical-align: top
  &:focus
    outline: none
    border-color: lighten(primaryColor, 35%)
  &.error, .error &
    color: dangerColor
    border-color: dangerColor
input, select
  height: 38px
