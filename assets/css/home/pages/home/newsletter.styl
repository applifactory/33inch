.home
  .newsletter
    background: #2D3C54
    color: white
    text-align: center
    min-height: 0px
    padding: 2em 0 4.5em
    h2
      font-size: 24px
      //font-family: 'Bebas_neue_regular', sans-serif
      font-family: sans-serif
      font-weight: normal
      margin-top: 1.5em
      margin-bottom: 0.5em
    p
      margin-top: 0
      font-size: 18px
      font-weight: normal
    form
      margin-right: -40px
      input
        height: 40px
        padding: 2px 12px
        border-radius: 18px
        border: none
        width: 250px
        font-size: 18px
        background: #273248
        color: white
        &:focus
          outline: none
      input[type=submit]
        background: url(../submit.png)
        width: 42px
        height: 42px
        overflow: hidden
        text-indent: -500px
        margin-left: 10px
        cursor: pointer

