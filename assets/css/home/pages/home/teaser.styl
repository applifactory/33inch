.home
  section.teaser
    color: white
    font-family: 'Bebas_neue_light', sans-serif
    text-align: center
    min-height: 100%
    position: relative
    h2
      text-shadow: 0 0 15px rgba(0, 0, 0, 0.55), 0 0 5px rgba(0, 0, 0, 0.55)
    .sides
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      &:hover
        .left
          width: 20%
        .right
          width: 80%
      .left
        &:hover
          width: 80%
        &:hover + .right
          width: 20%
    .left, .right
      transition: all 0.4s ease
      overflow: hidden
      clip: rect(0, auto, auto, 0)
      h2
        width: 600px
        transform: translate(-50%, 0)
        position: fixed
        top: 50%
        left: 50%
        font-size: 54px
        font-weight: normal
        text-shadow: 0 0 white, 0 0 15px rgba(0, 0, 0, 0.75), 0 0 5px rgba(0, 0, 0, 0.75)
    .left
      background: url(../teaser-desk.jpg) no-repeat center
      background-size: cover
      position: absolute
      top: 0
      bottom: 0
      left: 0
      width: 50%
    .right
      background: url(../teaser-man.jpg) no-repeat center
      background-size: cover
      position: absolute
      top: 0
      bottom: 0
      right: 0
      width: 50%
    .content
      position: fixed
      left: 0
      right: 0
      top: 50%
      margin-top: -190px
      &::before
        content: ''
        position: fixed
        left: 0
        right: 0
        top: 0
        height: 50%
        background: rgba(0,0,0,0)
      h1
        background: url(../33-logo-shadow.png)
        width: 178px
        height: 140px
        overflow: hidden
        text-indent: -500px
        margin: 1em auto 0
      h2
        font-size: 54px
        font-weight: bold
        width: 620px
        margin: 0.1em auto 0
        strong
          font-weight: normal
          font-family: 'Bebas_neue_regular', sans-serif

